{% extends "layouts/base.twig" %}

{% block content %}
    <div class="container-fluid g-5 mt-5">
        <div class="row">
            <div class="col-6 offset-3">
                {% include "partials/_alert.twig" %}

                <div class="card shadow">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="card-title mb-0">Request Vacation</h5>
                    </div>
                    <div class="card-body">
                        <form action="/vacations" method="POST">
                            <div class="form-floating mb-3">
                                <input type="date" class="form-control" id="start-date" name="start_date" min="{{ date().format('Y-m-d') }}" max="{{ date().format('Y-12-31') }}" required>
                                <label for="start-date">Start Date</label>
                            </div>
                            <div class="form-floating mb-3">
                                <input type="date" class="form-control" id="end-date" name="end_date" min="{{ date().format('Y-m-d') }}" max="{{ date().format('Y-12-31') }}" required>
                                <label for="end-date">End Date</label>
                            </div>
                            <div class="form-floating mb-3">
                                <textarea class="form-control" id="reason" name="reason" placeholder="reason" required></textarea>
                                <label for="reason">Reason</label>
                            </div>
                            <div class="d-flex justify-content-center mt-3">
                                <a class="btn btn-primary me-3" href="/vacations">Back</a>
                                <button type="submit" class="btn btn-primary">Create</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}