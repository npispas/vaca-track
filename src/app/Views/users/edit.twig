{% extends "layouts/base.twig" %}

{% block content %}
    <div class="row">
        <div class="col-12 col-md-6 offset-md-3">
            <div class="card shadow-md">
                <div class="card-body">
                    <h2 class="card-title mb-3">Edit User {{ user.name }}</h2>
                    <form action="/users/{{ user.id }}" method="POST">
                        <div class="form-floating mb-3">
                            <input class="form-control" id="name" name="name" placeholder="Full Name" required value="{{ user.name }}" autocomplete="name" autofocus>
                            <label for="name">Full Name</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="email" class="form-control" id="email" name="email" placeholder="Email Address" required autocomplete="email" value="{{ user.email }}">
                            <label for="email">Email Address</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="password" class="form-control" id="password" name="password" placeholder="Password" autocomplete="new-password">
                            <label for="password">Password</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="password" class="form-control" id="confirm-password" name="confirm_password" placeholder="Confirm Password" autocomplete="new-password">
                            <label for="confirm-password">Confirm Password</label>
                        </div>
                        <div class="d-flex justify-content-center mt-3">
                            <a class="btn btn-primary me-3" href="/users">Back</a>
                            <button type="submit" class="btn btn-primary">Update</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}